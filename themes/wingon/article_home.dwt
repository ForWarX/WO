$(document).ready(function() {
	//blocksit define
	$(window).load( function() {
	setblocksit();
	});
	//window resize
	$(window).resize(function() {
	setblocksit();
	});
});
function setblocksit(){
	var conWidth = $('#pin-container').width();
	//my container width
	var gridwidth = 300;
	//alert(conWidth);
	var col = conWidth/gridwidth;
	//alert(col);
	$('#pin-container').BlocksIt({
	numOfCol: Math.floor(col),
	offsetX: 8,
	offsetY: 8
	});
}
</script>






